{
  "compilerOptions": {
    // base options
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    // strict options
    "strict": true,
    "noUncheckedIndexedAccess": true,

    // module options
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

    // lib options
    "lib": ["ES2022"]
  }
}
